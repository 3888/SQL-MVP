<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/app_font_size_14</item>
        <item name="android:listDivider">@color/color_divider_gray</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ListItems">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">@dimen/multi_line_text_field_padding_top</item>
        <item name="android:paddingBottom">@dimen/multi_line_text_field_padding_bottom</item>
    </style>


</resources>